<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VoiceSettings" >

    <ImageView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/pictureSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.27"
            android:src="@drawable/picturemenu" />

        <ImageView
            android:id="@+id/voiceSettings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:src="@drawable/voicemenu" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/recordVoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="recordVoice"
        android:src="@drawable/recordvoice" />

</LinearLayout>