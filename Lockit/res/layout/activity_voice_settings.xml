<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:background = "#EBF7F5"    
    android:orientation="vertical"
    tools:context=".VoiceSettings" >

    <ImageView
        android:id="@+id/titleBar"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:paddingRight="60dp"
        android:paddingTop="10dp"
        android:src="@drawable/lockittitle" />

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

         <ImageView
             android:id="@+id/pictureSettings"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_weight="0.50"
             android:onClick="pictureSettings"
             android:paddingTop="10dp"
             android:src="@drawable/picture2" />

        <ImageView
            android:id="@+id/voiceSettings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:paddingTop="10dp"
            android:src="@drawable/voice2" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/recordVoice"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:onClick="recordVoice"
        android:src="@drawable/recordvoice" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:onClick="testVoice"
        android:src="@drawable/testvoice" />

    <ImageButton
        android:id="@+id/voiceEnable"
          android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
            android:src="@drawable/enable"
            android:onClick="enableVoice"

        />

</LinearLayout>